                    <label class="form-check-label">
                        <input type="radio" class="form-check-input" name="genre" value="Travel">Travel
                    </label>
                </div>
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="radio" class="form-check-input" name="genre" value="True crime">True crime
                    </label>
                </div>
                <button type="submit" class="btn btn-primary">Add Book</button>
                <button type="reset" class="btn btn-danger">Reset</button>
            </form>
        </div>
