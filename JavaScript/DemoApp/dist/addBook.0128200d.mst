{{> header}}
<section id="addBookView">
    <div class="background-app">
        <div class="form-container">
            <h1>Add Book</h1>
            <form action="#/addBook" method="POST" name="addBookForm">
                <div class="form-group">
                    <label for="title" class="white-labels">Title</label>
                    <input type="text" name="title" class="form-control" placeholder="Title" required>
                </div>
                <div class="form-group">
                    <label for="author" class="white-labels">Author</label>
                    <input type="text" name="author" class="form-control" placeholder="Author" required>
                </div>
                <div class="form-group">
                    <label for="pages" class="white-labels">Pages</label>
                    <input type="number" name="pages" class="form-control" placeholder="Pages" required>
                </div>
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="radio" class="form-check-input" name="genre" value="Art" required>Art
                    </label>
                </div>
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="radio" class="form-check-input" name="genre" value="Autobiography" >Autobiography
                    </label>
                </div>
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="radio" class="form-check-input" name="genre" value="Biography">Biography
                    </label>
                </div>
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="radio" class="form-check-input" name="genre" value="Book review">Book review
                    </label>
                </div>
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="radio" class="form-check-input" name="genre" value="Cookbook">Cookbook
                    </label>
                </div>
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="radio" class="form-check-input" name="genre" value="Diary">Diary
                    </label>
                </div>
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="radio" class="form-check-input" name="genre" value="Dictionary">Dictionary
                    </label>
                </div>
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="radio" class="form-check-input" name="genre" value="Encyclopedia">Encyclopedia
                    </label>
                </div>
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="radio" class="form-check-input" name="genre" value="Guide">Guide
                    </label>
                </div>
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="radio" class="form-check-input" name="genre" value="Health">Health
                    </label>
                </div>
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="radio" class="form-check-input" name="genre" value="History">History
                    </label>
                </div>
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="radio" class="form-check-input" name="genre" value="Journal">Journal
                    </label>
                </div>
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="radio" class="form-check-input" name="genre" value="Math">Math
                    </label>
                </div>
                <div class="form-check">
                    <label class="form-check-label">
